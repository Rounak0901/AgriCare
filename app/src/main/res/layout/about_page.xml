        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                android:id="@+id/eventCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/card_image"
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/vesit_campus1"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_baseline_location_on_24"
                                android:layout_gravity="center|start|bottom"
                                android:layout_marginBottom="23dp"
                                android:layout_marginLeft="10dp" />


                            <TextView
                                android:id="@+id/eventTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginLeft="25dp"
                                android:layout_marginBottom="20dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text="@string/institute_campus"
                                android:textColor="@color/white"
                                android:textSize="25sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <TextView
                android:id="@+id/txtAboutContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="@string/About_content"
                android:textAlignment="textStart"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/olive_black"
                android:textSize="20sp"
                android:textStyle="bold" />

                <TextView
                android:id="@+id/txtAboutContent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAboutContent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="@string/About_content2"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="20sp"
                android:textColor="@color/olive_black"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light"/>

                <TextView
                android:id="@+id/txtAboutContent3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/imgDiseaseCollage"
                android:text="@string/About_content3"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="20sp"
                android:textColor="@color/olive_black"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>