<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultsActivity"
    android:background="@color/antique_white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_dark">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:contentScrim="@color/green_dark"
            app:expandedTitleTextAppearance="@style/expandedBarTextStyle"
            app:collapsedTitleTextAppearance="@style/collapsedBarTextStyle"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="@string/results">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:padding="0dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agri"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textStyle="bold"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:textColor="@color/antique_white"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:elevation="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/care"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:textColor="@color/antique_white"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:elevation="5dp"/>

            </LinearLayout>

            <View
                android:layout_width="180dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:background="@color/antique_white"
                android:layout_marginTop="20dp"/>


            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextColor="@color/smokyWhite"
                android:background="@color/green_dark" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_corner_top"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="75dp"
                android:layout_gravity="center"
                android:elevation="0dp"
                android:background="@color/black"
                android:outlineSpotShadowColor="@color/black"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imgResults"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/crop2"
                    android:padding="3dp"
                    android:background="@color/green_dark"
                    android:layout_gravity="center"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/results"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textSize="28dp"
                android:textColor="@color/color_heading"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="2dp"
                    android:layout_gravity="left"
                    android:gravity="right"
                    android:text="@string/disease_name"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="@color/green_dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtDiseaseName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="2dp"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:text="Scald/ Blast"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="@color/green_dark"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:padding="2dp"
                    android:gravity="right"
                    android:text="@string/scientific_name"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="@color/green_dark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtDiseaseScientificName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="2dp"
                    android:gravity="left"
                    android:text="lorem epsum"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="@color/green_dark"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/preventive_measures"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="@color/color_heading"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txtPreventiveMethods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/green_dark"
                android:textStyle="bold"
                android:gravity="center_horizontal" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>