<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    tools:context=".FirstActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_heading"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:layout_scrollFlags="scroll|enterAlways"/>
        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnCamera"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#49DB04"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp">

        <ImageView
            android:id="@+id/imgCamera"
            android:layout_width="320dp"
            android:layout_height="220dp"
            android:elevation="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-15dp"
            android:src="@drawable/ic_camera_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/btnGallery"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#49DB04"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnCamera"
        android:layout_centerInParent="true"
        android:layout_marginTop="28dp">

        <ImageView
            android:id="@+id/imgGallery"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="-10dp"
            android:elevation="4dp"
            android:src="@drawable/ic_gallery_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gallery"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tutorialVideoLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGallery"
        android:text="@string/hyperlink"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_heading"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textAlignment="center"
        android:layout_marginHorizontal="18dp"/>

</RelativeLayout>